<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" >
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
		<TextView
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textStyle="bold"
        	android:text="d_name:"
			style="@style/information_text"/>
		<TextView
			android:id="@+id/tv_item_d_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingRight="3dp"
			style="@style/information_text"/>
    </LinearLayout>
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
		<TextView
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textStyle="bold"
        	android:text="WiFi SSID:"
			style="@style/information_text"/>
		<TextView
			android:id="@+id/tv_wifi_ssid"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingRight="3dp"
			style="@style/information_text"/>
    </LinearLayout>
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
		<TextView
			android:id="@+id/tv_ec_host_address"
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			style="@style/information_text"/>
		<TextView
			android:id="@+id/tv_ec_host_status"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textStyle="bold"
			android:paddingRight="3dp"
			style="@style/information_text"/>
    </LinearLayout>
    
    <ToggleButton
        android:id="@+id/btn_accelerometer"
		style="@style/thin_small_toggle_button"
		android:textOn="Acceleration working"
		android:textOff="Acceleration idle"/>
    
    <ToggleButton
        android:id="@+id/btn_mic"
		style="@style/thin_small_toggle_button"
		android:textOn="Mic working"
		android:textOff="Mic idle"/>
    
    <ToggleButton
        android:id="@+id/btn_speaker"
		style="@style/thin_small_toggle_button"
		android:textOn="Speaker working"
		android:textOff="Speaker idle"/>
    
    <Button
        android:id="@+id/btn_deregister"
        android:text="Deregister"
		style="@style/thin_small_button"/>
    
</LinearLayout>
